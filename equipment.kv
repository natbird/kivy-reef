<EquipmentWidget>
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'horizontal'
        
        DLabel:
            text: root.name
            size_hint_x: 0.5
            font_size: self.height / 3

        DToggleButton:
            text: 'On'
            font_size: self.height / 3
            group: root.name
            size_hint_x: 0.25
            state: 'down' if root.value == True else 'normal'
            on_press: root.postState(True)
        DToggleButton:
            text: 'Off'
            font_size: self.height / 3
            group: root.name
            size_hint_x: 0.25
            state: 'normal' if root.value == True else 'down'
            on_press: root.postState(False)
