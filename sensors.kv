<TempWidget>
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'

            Image:
                size_hint: 0.2, 0.8
                source: './resources/icons/sensors_highres.png'
                allow_stretch: True
            DLabel:
                size_hint: 0.6, 0.8
                text: str(root.value)
                font_size: self.width / 4
            DLabel:
                size_hint: 0.2, 0.8
                text: '°C' if root.fahrenheit == False else '°F'
                font_size: self.width / 3
                halign: 'left'

        DLabel:
            text: root.name
            size_hint: 1, 0.2
            font_size: self.height / 1.8

<PhWidget>
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            Image:
                size_hint: 0.2, 0.8
                source: './resources/icons/beaker_highres.png'
                allow_stretch: True
            DLabel:
                size_hint: 0.6, 0.8
                text: str(root.value)
                font_size: self.width / 4
            DLabel:
                size_hint: 0.2, 0.8
                text: 'pH' if root.entity_type == 'ph' else app.config.get('sensors', 'flowmeter_unit')
                font_size: self.width / 3
                halign: 'left'

        DLabel:
            text: root.name
            size_hint: 1, 0.2
            font_size: self.height / 1.8
