<MacroWidget>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'horizontal'
        padding: 10
        
        DLabel:
            text: root.name
            font_size: self.height / 4
            size_hint_x: 0.5
        
        DButton:
            text: 'Run'
            font_size: self.height / 4
            on_press: root.run()
            on_release: reverse_button.background_color = 'lime'
            size_hint_x: 0.25
        
        DButton:
            id: reverse_button
            disabled: True if root.reversible == False else False
            text: 'Reverse' if root.reversible == True else 'Not Reversible'
            on_press: root.revert()
            on_release: self.background_color = [1, 1, 1, 1]
            size_hint_x: 0.25
            