<SystemLabel@DLabel>
    font_size: self.width / 15

<SystemWidget>:
    cols: 2 if app.config.get('display', 'orientation') == 'horizontal' else None
    rows: None if app.config.get('display', 'orientation') == 'horizontal' else 2
    spacing: 10
    padding: 10

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.7, 1
        SystemLabel:
            text: 'Name:   ' + root.server_name
        SystemLabel:
            text: 'IP:   ' + str(root.server_ip)
        SystemLabel:
            text: 'Reef-pi version:   ' + root.version
        SystemLabel:
            text: 'Running since:   ' + root.uptime
        SystemLabel:
            text: 'CPU Temp:  ' + root.cpu_temp
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.3, 1
        padding: 0
        spacing: 10

        DButton:
            text: 'Reload reef-pi'
            background_color: 'green'
            font_size: self.width / 10
            on_press: root.reload()
            disabled: True if app.config.get('admin', 'allow_reload') == 'False' else False
        DButton:
            text: 'Restart host'
            background_color: 'orange'
            font_size: self.width / 10
            on_press: root.restart()
            disabled: True if app.config.get('admin', 'allow_restart') == 'False' else False
        DButton:
            text: 'Shutdown host'
            background_color: 'red'
            font_size: self.width / 10
            on_press: root.poweroff()
            disabled: True if app.config.get('admin', 'allow_poweroff') == 'False' else False
