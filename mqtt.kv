<LightButton@ButtonBehavior+BoxLayout>
    orientation: 'vertical'
    
    image_source: ''
    top_label_text: 'Default'
    bottom_label_text: 'Default'
    
    always_release: False
    on_press: button_image.color = 'yellow'
    on_release: button_image.color = 'white'

    DLabel:
        id: button_top_label
        text: root.top_label_text
        font_size: self.width / 20
        size_hint_y: 0.15
    Image:
        id: button_image
        source: root.image_source
        size_hint_y: 0.55
        allow_stretch: True
        keep_ratio: True
    DLabel:
        id: button_bottom_label
        text: root.bottom_label_text
        font_size: self.width / 20
        size_hint_y: 0.3

<MqttWidget>:
    LightButton:
        top_label_text: 'MQTT'
        bottom_label_text: root.name
        image_source: './resources/icons/bulb_highres.png'
        on_press: root.pressed()
        pos: root.pos
        size: root.size
