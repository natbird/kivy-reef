<AtoWidget>
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        padding: 0
        spacing: 0
        
        DLabel:
            text: 'ATO'
            font_size: self.height
            size_hint_y: 0.2

        DLabel:
            text: str(root.value) + " s"
            font_size: self.height
            size_hint_y: 0.5
        
        DLabel:
            text: root.name
            font_size: self.height / 3
            size_hint_y: 0.3

<DoserWidget>
